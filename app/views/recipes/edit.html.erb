<!-- Validation failure messages -->

<% if @recipe.errors.any? %>
  <% @recipe.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Recipe #<%= @recipe.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_recipe/<%= @recipe.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @recipe.name %>">
            </div>
          </div>

          <!-- Label and input for instructions_url -->
          <div class="form-group">
            <label for="instructions_url" class="col-sm-2 control-label">
              Instructions url
            </label>
            <div class="col-sm-10">
              <input type="text" id="instructions_url" name="instructions_url" placeholder="Instructions url" class="form-control" value="<%= @recipe.instructions_url %>">
            </div>
          </div>



          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Recipe
              </button>
              or
              <a href="/recipes/<%= @recipe.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
