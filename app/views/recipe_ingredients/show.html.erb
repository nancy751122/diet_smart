<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Recipe Ingredient #<%= @recipe_ingredient.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Recipe</dt>
              <dd><%= @recipe_ingredient.recipe_id %></dd>

              <dt>Ingredient</dt>
              <dd><%= @recipe_ingredient.ingredient_id %></dd>

              <dt>Quantity</dt>
              <dd><%= @recipe_ingredient.quantity %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/recipe_ingredients" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/recipe_ingredients/<%= @recipe_ingredient.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_recipe_ingredient/<%= @recipe_ingredient.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
