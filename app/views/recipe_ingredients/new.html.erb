<!-- Validation failure messages -->

<% if @recipe_ingredient.errors.any? %>
  <% @recipe_ingredient.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Recipe Ingredient</h3>
      </div>
      <div class="panel-body">
        <form action="/create_recipe_ingredient" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for recipe_id -->
          <div class="form-group">
            <label for="recipe_id" class="col-sm-2 control-label">
              Recipe
            </label>
            <div class="col-sm-10">
              <%= select_tag(:recipe_id, options_from_collection_for_select(Recipe.all, :id, :name, @recipe_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for ingredient_id -->
          <div class="form-group">
            <label for="ingredient_id" class="col-sm-2 control-label">
              Ingredient
            </label>
            <div class="col-sm-10">
              <%= select_tag(:ingredient_id, options_from_collection_for_select(Ingredient.all, :id, :name, @ingredient_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for quantity -->
          <div class="form-group">
            <label for="quantity" class="col-sm-2 control-label">
              Quantity
            </label>
            <div class="col-sm-10">
              <input type="text" id="quantity" name="quantity" placeholder="Quantity" class="form-control" value="<%= @recipe_ingredient.quantity %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Recipe Ingredient
              </button>
              or
              <a href="/recipe_ingredients">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
