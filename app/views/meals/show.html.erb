<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Meal #<%= @meal.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @meal.name %></dd>

              <dt>Recipe</dt>
              <dd><%= @meal.recipe.name %></dd>

              <dt>Day</dt>
              <dd><%= @meal.day %></dd>

              <dt>Category</dt>
              <dd><%= @meal.category %></dd>

              <dt>Diet</dt>
              <dd><%= @meal.diet.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/meals" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/meals/<%= @meal.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_meal/<%= @meal.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
<div class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Modal title</h4>
      </div>
      <div class="modal-body">
        <p>One fine body…</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
</div>

<% @meal.recipe.recipe_ingredients.each do |recipe_ingredient| %>
<li> <%=recipe_ingredient.ingredient.name %> <%=recipe_ingredient.quantity %> <%=recipe_ingredient.ingredient.unit %></li>
<% end %>
</ul>



<!-- End responsive panel example -->
